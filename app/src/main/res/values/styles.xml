<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AuthenticationActivity" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/auth_colorPrimary</item>
       <item name="credential_screen_bg_gradient_start">@color/auth_bg_gradient_start</item>
        <item name="credential_screen_bg_gradient_end">@color/auth_bg_gradient_end</item>
        <item name="materialButtonStyle">@style/AuthenticationActivity.ButtonStyle</item>
    </style>

    <style name="AuthenticationActivity.ButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="HomeActivity" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="home_screen_bg_gradient_start">@color/home_bg_gradient_start</item>
        <item name="home_screen_bg_gradient_end">@color/home_bg_gradient_end</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorHint">@color/hint_color</item>
    </style>

</resources>