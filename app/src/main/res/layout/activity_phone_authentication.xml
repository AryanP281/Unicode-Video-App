<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/credentials_bg"
    >

    <EditText
        android:id="@+id/phoneauth_phone_num"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:hint="@string/phoneauth_phone_num_hint"
        android:background="@drawable/round_textbox"
        android:padding="8dp"
        />

    <EditText
        android:id="@+id/phoneauth_verification_code"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/phoneauth_phone_num"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:enabled="false"
        android:visibility="invisible"
        android:hint="@string/phoneauth_verification_code_hint"
        android:background="@drawable/round_textbox"
        android:padding="8dp"
        />

    <Button
        android:id="@+id/phonwauth_submit_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/phoneauth_verification_code"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        />

</RelativeLayout>